{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "bBPF",
	"patterns": [
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {"patterns": [
			{
				"match": "(//) .*$",
				"name": "comment.line.bpf",
				"captures": {"1": {"name": "comment.line.double-dash.bpf"}}
			},
			{
				"begin": "/\\*",
				"end": "\\*/",
				"name": "comment.block"
			}
		]}
	},
	"scopeName": "source.bbpf"
}